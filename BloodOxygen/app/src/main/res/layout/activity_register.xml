<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/im_logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:paddingBottom="30dp"
        />
    <EditText
        android:id="@+id/et_r_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/im_logo2"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/word"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/et_r_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_r_name"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/word"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/et_r_retypepass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_r_pass"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/word"
        android:hint="Re-type password"
        android:textColorHint="@color/white"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp"
        android:inputType="textPassword"/>


    <EditText
        android:id="@+id/et_r_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_r_retypepass"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:textColor="@color/word"
        android:hint="Phonenumber"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:background="@drawable/bg_btn"
        android:paddingLeft="10dp" />
    <Button
        android:id="@+id/bt_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_r_phone"
        android:layout_margin="10dp"
        android:background="@drawable/bg_bt2"
        android:text="Register"/>

</RelativeLayout>