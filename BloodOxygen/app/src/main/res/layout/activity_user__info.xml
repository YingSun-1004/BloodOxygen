<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Info"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="50dp"
        android:text="Please fill in the below details"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/et_ui_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_ui"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn"
        android:hint="Name"
        android:paddingLeft="10dp"
        android:textColor="@color/word"
        android:textColorHint="@color/white"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/et_ui_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_ui_name"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn"
        android:hint="Age"
        android:paddingLeft="10dp"
        android:textColor="@color/word"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_ui_gender"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_ui_age"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn"
        android:hint="Gender"
        android:paddingLeft="10dp"
        android:textColor="@color/word"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_ui_height"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_ui_gender"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn"
        android:hint="Height"
        android:paddingLeft="10dp"
        android:textColor="@color/word"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_ui_weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_ui_height"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn"
        android:hint="Weight"
        android:paddingLeft="10dp"
        android:textColor="@color/word"
        android:textColorHint="@color/white"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_sports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/et_ui_weight"
        android:text="*Do you usually do aerobic exercise?"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <RadioGroup
        android:id="@+id/radioGroupsport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sports"
        android:orientation="horizontal">
    <RadioButton
        android:id="@+id/dosportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/word"/>
    <RadioButton
        android:id="@+id/nosportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/word"/>
    </RadioGroup>
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/radioGroupsport"
            android:text="*Do you get a full 7 hours of sleep a day?"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <RadioGroup
            android:id="@+id/radioGroupsleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_body"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/Buttonyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/word"/>
            <RadioButton
                android:id="@+id/maleButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/word"/>
        </RadioGroup>

    <Button
        android:id="@+id/bt_ui_save"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_below="@id/radioGroupsleep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_bt2"
        android:text="SAVE"
        android:textSize="12dp" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>